<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogor.tmandroidclient.ShowConsultationStudent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Consultation 1"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/dayOfWeekShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day of week: 5"
            android:layout_marginTop="40dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/hourShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour: 15:00"
            android:layout_marginTop="70dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/yearShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2015/2016"
            android:layout_marginTop="100dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/durationShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 3h"
            android:layout_marginTop="130dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/showListButton_S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Show list of signed students"/>

    </FrameLayout>


</RelativeLayout>
