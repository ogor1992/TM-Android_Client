<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ogor.tmandroidclient.ShowConsultation">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/quantityButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test // Change quantity // test"/>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Consultation 1"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/dayOfWeekShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day of week: 5"
            android:layout_marginTop="40dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/hourShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour: 15:00"
            android:layout_marginTop="70dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/yearShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2015/2016"
            android:layout_marginTop="100dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/durationShowLabel"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 3h"
            android:layout_marginTop="130dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/showListButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Show list of signed students"/>

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameShowLabel2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Consultation 2"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/dayOfWeekShowLabel2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day of week: 7"
            android:layout_marginTop="40dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/hourShowLabel2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour: 12:00"
            android:layout_marginTop="70dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/yearShowLabel2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2015/2016"
            android:layout_marginTop="100dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/durationShowLabel2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 2h"
            android:layout_marginTop="130dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/showListButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Show list of signed students"/>

    </FrameLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameShowLabel3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Consultation 1"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/dayOfWeekShowLabel3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day of week: 5"
            android:layout_marginTop="40dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/hourShowLabel3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour: 15:00"
            android:layout_marginTop="70dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/yearShowLabel3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2015/2016"
            android:layout_marginTop="100dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/durationShowLabel3"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: 3h"
            android:layout_marginTop="130dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/showListButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="Show list of signed students"/>

    </FrameLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
